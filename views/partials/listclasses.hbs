{{#each classList}}
  <div class="ui equal width padded raised segment grid">
    <div class = "four wide column middle aligned grid">
      <img class="ui fluid image" src="{{this.img}}">
    </div>
    <div class = "five wide align right column padded">
      <h2>{{this.difficulty}} {{this.name}}</h2>
      <table class="ui celled striped table">
        <thead>
        <tr><th colspan="3">
          Details
        </th></tr>
        </thead>
        <tbody>
        <tr>
          <td>
            <b>Difficulty</b>
          </td>
          <td>{{this.difficulty}}</td>
        </tr>
        <tr>
          <td>
            <b>Duration</b>
          </td>
          <td>{{this.duration}}mins</td>
        </tr>
        <tr>
          <td class="collapsing">
            <b>Availability</b>
          </td>
          <td id="spaces{{this.classid}}">
            <script>
              document.getElementById("spaces{{this.classid}}").textContent = ({{this.maxMembers}} - {{this.lessonList.[0].memberList.length}}) + ' spaces remaining';
            </script>
        </tr>
          </td>
        <tr>
          <td>
            <b>Length</b>
          </td>
          <td>{{this.weeks}} weeks</td>
        </tr>
        <tr>
          <td class="collapsing">
            <b>Times</b>
          </td>
          <td>
            {{#each days}}
              {{this}}
              <br>
            {{/each}}
          </td>
        </tr>
        </tbody>
      </table>
    </div>

    <div class = "seven wide align right column padded">
      <h2>Enrollment</h2>
      <table class="ui celled striped table">
        <thead>
        <tr><th colspan="3">
          <br>
        </th></tr>
        </thead>
        <tbody>
        <tr>
          <td>
            <b>All Classes</b>
          </td>
          <td>
            <button class="ui blue button" id="enrollButton{{this.classid}}" onclick="window.location='/classes/{{this.classid}}/fullEnroll'">Enroll</button>
            <script type="text/javascript">
              if({{this.maxMembers}} - {{this.lessonList.[0].memberList.length}} === 0 && !{{../user.trainer}}){
                document.getElementById("enrollButton{{this.classid}}").className = "ui red disabled button";
                document.getElementById("enrollButton{{this.classid}}").textContent = "Full";
              }
              else if({{../user.trainer}}){
                document.getElementById("enrollButton{{this.classid}}").className = "ui disabled button";
              }
            </script>
          </td>
        </tr>
        <tr>
          <td class="collapsing">
            <b>Specific Class</b>
          </td>
          <td>
            <select class="ui fluid search dropdown" name="day">
              <option value="">Select a Day</option>
              {{#each lessonList}}
                <option value="">{{this.date}}</option>
              {{/each}}
            </select>
            <br>
            <button class="ui small primary button"> Sign Up </button>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <br>
{{/each}}