{{> menu id="dashboard"}}

<div class="ui equal width padded grid">
  <div class = "four wide column">
    {{> profilecard}}
  </div>

  <div class = "twelve wide align right column padded">
    <section class="ui raised segment">
      <h2 class="ui dividing header">BMI</h2>
      {{> bmi}}
    </section>
    <section class="ui raised segment">
      <div class="ui pointing secondary demo menu">
        <a class="active item" data-tab="first">Members Assessments</a>
        <a class="item" data-tab="second">Member Goals</a>
      </div>

      <div class="ui active tab" data-tab="first">{{> trainerlistassessments}}</div>
      <div class="ui tab" data-tab="second" style="padding: 10px;">
        {{> listgoals}}
        {{> addgoal}}
      </div>
    </section>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('.demo.menu .item').tab({history:false});
  });
</script>
